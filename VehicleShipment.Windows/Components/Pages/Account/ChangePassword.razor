@page "/account/changepassword/{email}"

@inject IAccountService accountService;
@inject NavigationManager navigationManager;

<h3>Change Password</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="passwordModel" OnValidSubmit="HandlePasswordChange">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="newPassword">New Password</label>
            <InputText id="newPassword" class="form-control" @bind-Value="passwordModel.NewPassword" />
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Change Password</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public string email { get; set; }  // Accept email as a route parameter

    private bool isLoading = false;
    private ChangePasswordModel passwordModel = new();

    private async Task HandlePasswordChange()
    {
        var result = await accountService.ChangePassword(email, passwordModel.NewPassword);
        if (result.IsSuccess)
        {
            navigationManager.NavigateTo("/");
        }
        else
        {
            // Show error message
            Console.WriteLine("Error: " + result.ErrorMessage);
        }
    }

    public class ChangePasswordModel
    {
        [Required]
        [DataType(DataType.Password)]
        public string NewPassword { get; set; }
    }
}
